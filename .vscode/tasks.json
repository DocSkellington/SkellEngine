{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make Engine",
            "problemMatcher": []
        },
        {
            "label": "install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make install",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "command": "./Engine",
            "problemMatcher": []
        },
        {
            "label": "install & run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/bin/examples/test"
                }
            },
            "command": "make -j4 install && cd ../bin/examples/test && ./test",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "doc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make documentation",
            "problemMatcher": []
        },
        {
            "label": "install & run tests",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/bin/tests"
                }
            },
            "command": "make -j4 install && cd ../bin/tests && ./SkellTests",
            "problemMatcher": []
        },
    ]
}